<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.zao.fire.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="edu.zao.fire.rcp.Perspective"
            id="file-utils.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="edu.zao.fire.views.DemoView"
            id="file-utils.view">
      </view>
      <view
            class="edu.zao.fire.views.renamer.RenamerView"
            id="file-utils.renamer.view"
            name="Renaming View"
            restorable="true">
      </view>
      <view
            class="edu.zao.futils.views.example.vogella.View"
            id="file-utils.vogella-demo-view"
            name="Person Table"
            restorable="true">
      </view>
      <view
            class="edu.zao.fire.views.metarenamer.MetaRenamerView"
            id="file-utils.metarenamer.view"
            name="Metadata Renamer View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="file-utils.renamer.view"
               minimized="false"
               moveable="true"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="file-utils.metarenamer.view"
               minimized="false"
               moveable="false"
               relationship="stack"
               relative="file-utils.renamer.view"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="file-utils.application"
            name="DeployTest">
         <property
               name="appName"
               value="DeployTest">
         </property>
         <property
               name="windowImages"
               value="icons/flame-16.png,icons/flame-32.png,icons/flame-48.png,icons/flame-64.png,icons/flame-128.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="edu.zao.fire.editors.TestEditor"
            default="false"
            id="file-utils.testeditor"
            name="TestEditor">
      </editor>
   </extension>

</plugin>
